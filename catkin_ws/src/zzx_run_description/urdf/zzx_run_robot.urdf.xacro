  <!-- 定义一个 gpu 参数，默认值为 false，后续可以在启动时传递 gpu 参数来启用 GPU 支持 -->
  <xacro:arg name="gpu" default="false"/>

  <!-- 将传入的 gpu 参数赋值给一个属性 -->
  <xacro:property name="gpu" value="$(arg gpu)" />

  <!-- 引入 Velodyne VLP-16 激光雷达的 URDF 文件 -->
  <xacro:include filename="$(find velodyne_description)/urdf/VLP-16.urdf.xacro"/>
  <!-- 配置 VLP-16 激光雷达，将其挂载在 base_link 上，并设置相关参数 -->
  <xacro:VLP-16 parent="base_link" name="velodyne" topic="/velodyne_points" hz="10" samples="440" gpu="${gpu}">
    <!-- 激光雷达相对于 base_link 的位置和姿态 -->
    <origin xyz="0.2 0 0.5" rpy="0 0 0" />
  </xacro:VLP-16>



<!--lidar_link-->
        <gazebo reference="lidar_link">
            <sensor type="ray" name="rplidar">
                <pose>0 0 0 0 0 0</pose>
                <visualize>false</visualize>
                <update_rate>5.5</update_rate>
                <ray>
                    <scan>
                      <horizontal>
                        <samples>360</samples>
                        <resolution>1</resolution>
                        <min_angle>-3</min_angle>
                        <max_angle>3</max_angle>
                      </horizontal>
                    </scan>
                    <range>
                      <min>0.10</min>
                      <max>6.0</max>
                      <resolution>0.01</resolution>
                    </range>
                    <noise>
                      <type>gaussian</type>
                      <mean>0.0</mean>
                      <stddev>0.01</stddev>
                    </noise>
                </ray>
                <plugin name="gazebo_rplidar" filename="libgazebo_ros_laser.so">
                    <topicName>/scan</topicName>
                    <frameName>lidar_link</frameName>
                </plugin>
            </sensor>
        </gazebo>


<!-- Drive controller -->
<gazebo>
  <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
    <updateRate>100.0</updateRate>
    <robotNamespace></robotNamespace>
    <leftFrontJoint>left_front_wheel_link_joint</leftFrontJoint>
    <rightFrontJoint>right_front_wheel_link_joint</rightFrontJoint>
    <leftRearJoint>left_behind_wheel_link_joint</leftRearJoint>
    <rightRearJoint>right_behind_wheel_link_joint</rightRearJoint>
    <wheelSeparation>0.64</wheelSeparation>
    <wheelDiameter>0.33</wheelDiameter>
    <commandTopic>cmd_vel</commandTopic>
    <odometryTopic>odom</odometryTopic>
    <robotBaseFrame>base_footprint</robotBaseFrame>
    <odometryFrame>odom</odometryFrame>
    <torque>10000</torque>
    <topicName>cmd_vel</topicName>
    <broadcastTF>1</broadcastTF>
  </plugin>
</gazebo>


<!-- ros_control plugin -->
